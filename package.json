{
  "name": "speakdeck",
  "version": "1.0.0",
  "description": "AI-powered presentation builder that creates narrated, visual-rich slide decks instantly",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspace=apps/web",
    "start": "npm run start --workspace=apps/web",
    "lint": "npm run lint --workspace=apps/web",
    "test": "npm run test --workspace=apps/web",
    "test:e2e": "npm run test:e2e --workspace=apps/web",
    "seed:fallback-decks": "node scripts/seed-fallback-decks.js",
    "setup": "npm install && npm run build --workspace=packages/shared"
  },
  "keywords": [
    "ai",
    "presentations",
    "narration",
    "slides",
    "hackathon"
  ],
  "author": "SpeakDeck Team",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.17.0"
  }
}
